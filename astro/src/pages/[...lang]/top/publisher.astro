---
import type { GetStaticPaths } from 'astro';
import { loadTranslation } from '../../../utils/loadTranslation';
import Layout from '../../../layouts/Layout.astro';
import PublisherTopFirstView from '../../../components/top/publisherTop/PublisherTopFirstView.astro';
import TypesOfPublishers from '../../../components/top/publisherTop/TypesOfPublishers.vue';
import FAQ from '../../../components/top/publisherTop/FAQ.astro';
import { paramsForLangPaths } from '../../../utils/paramsForLangPaths';
import Marquee from '../../../components/top/publisherTop/Marquee.vue';

export const getStaticPaths = (() => {
    return paramsForLangPaths()
}) satisfies GetStaticPaths;
const { lang } = Astro.params;
const t = await loadTranslation(lang ?? 'en_us');
---
<Layout t={t}>
    <div class="py-20 max-w-screen">
        <PublisherTopFirstView t={t} />
        <Marquee client:visible />
        <TypesOfPublishers t={t} client:visible />
        <FAQ t={t} />
    </div>
</Layout>